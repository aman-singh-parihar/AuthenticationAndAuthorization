@{
    ViewData["Title"] = "Cookie Login Page";
    @model User;
}

<form asp-controller="Cookie" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username"  class="form-control" aria-describedby="usernameHelp" placeholder="Enter Username" />
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password"  class="form-control" aria-describedby="usernameHelp" placeholder="Password" />
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe">Remeber me?</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>